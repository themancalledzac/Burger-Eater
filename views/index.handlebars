<body class="d-flex h-100 text-center text-white -bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column" id="picture">

        <header class="mb-auto">
            <div>
                <h1>Burger Menu</h1>

            </div>
            <h2>For those who are hungry</h2>

        </header>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/}}
            {{/unless}}
            {{/each}}
        </ul>

        <ul>
            {{#each burgers}}
            {{/each}}
        </ul>

        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</body>