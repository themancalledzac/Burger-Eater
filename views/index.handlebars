<body class="d-flex h-100 text-center text-white -bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column" id="picture">

        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Burger Eater Menu</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" href="index.handlebars">Home</a>
                    <a class="nav-link" href="layouts/menuCreator.handlebars">Create</a>
                    <a class="nav-link" href="layouts/about.hanlebars">About</a>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <div class="row">
                <div class="col-lg-4">
                    <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="" role="img" focusable="false">
                        <title>{{burger_name[0]}}</title>
                        <rect width="100%" height="100%"></rect>
                    </svg>
                    <h2>{{burger_name[0]}}</h2>
                </div>
            </div>
        </main>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/}}
            {{/unless}}
            {{/each}}
        </ul>

        <ul>
            {{#each burgers}}
            {{/each}}
        </ul>

        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</body>